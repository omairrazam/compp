<div class = "container">
  <% if flash[:cart_notice] %>
      <%= render :partial => "carts/partials/cart_notice" %>
  <% end %>
  <h3>Your Shopping Cart</h3>

  <table class="table table-bordered">
    <thead>
    <tr>
      <th>Name</th>
      <th>Size(s)</th>
      <th>Quantity</th>
      <th>Unit-Price</th>
      <th>Net-Price</th>
      <th width = 20></th>
    </tr>
    </thead>

    <tbody>
    <%= render :partial => @cart.cart_items %>
    </tbody>

    <tfoot>
    <tr>
      <td></td>
      <td><strong>Total: </strong></td>
      <td>$<%= sprintf("%0.2f", @cart.total) %> âž¥</td>
    </tr>
    </tfoot>
  </table>

  <p>
    <strong>
      <%= link_to "Proceed to Checkout", new_order_path %>
    </strong>
  </p>
</div>

