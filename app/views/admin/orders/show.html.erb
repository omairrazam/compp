<%#= render :partial => 'navigation' %>
<div class = "container">
  <p> Order total $<%#= @orders.total %></p>
  <h2>Contact Information</h2>
  <dl>
    <dt>ID</dt>
    <dd><%#= @orders.id %></dd>
    <dt>Email</dt>
    <dd><%#= @orders.email %></dd>
    <dt>Phone number</dt>
    <dd><%#= @orders.phone_number %></dd>
  </dl>

  <h2>Shipping Address</h2>
  <dl>
    <dt>First name</dt>
    <dd><%#= @orders.ship_to_first_name %></dd>
    <dt>Last name</dt>
    <dd><%#= @orders.ship_to_last_name %></dd>
    <dt>Address</dt>
    <dd><%#= @orders.ship_to_address %></dd>
    <dt>City</dt>
    <dd><%#= @orders.ship_to_city %></dd>
    <dt>Postal/Zip code</dt>
    <dd><%#= @orders.ship_to_postal_code %></dd>
    <dt>Country</dt>
    <dd><%#= @orders.ship_to_country %></dd>
  </dl>

	<h2>Order Details</h2>
	<% for item in @order.order_items %>
	  <%= link_to item.photo.id, item.photo %>
	  <%#= pluralize(item.amount, "pc", "pcs") %>,
	  $<%#= item.price * item.amount %></br>
	<% end %>
	<p><%= button_to "Close Order", :action => 'close', :id =>  @order unless @order.closed? %></p>
</div>
